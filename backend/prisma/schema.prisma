model Round {
  clue Clue @relation(fields: [clueId], references: [id])
  clueId Int @unique

}

model Country {
  id Int @id @default(autoincrement())
  name String @unique


}

model City {
  id Int @id @default(autoincrement())
  name String @unique
}

model Clue {
  id Int @id @default(autoincrement())
  text String
  round Round?

}

model FunFact {
  id Int @id @default(autoincrement())
  text String
}

model Trivia {
  id Int @id @default(autoincrement())
  text String


}
